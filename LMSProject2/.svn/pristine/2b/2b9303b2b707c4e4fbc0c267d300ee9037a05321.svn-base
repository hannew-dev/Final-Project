				$("#lecCode").val(rstLecCode);
				$("#atdScore").val(rstAtdScore);
				$("#mdtScore").val(rstMdtScore);
				$("#fnlScore").val(rstFnlScore);
				$("#asgScore").val(rstAsgScore);

				$("#scoreFrm").attr("action", "/score/update");

				// 				console.log("stuId:", stuId);
