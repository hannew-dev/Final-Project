  tr {
  user-select: none;
  }

  #lectureTbl, #basketTbl {
    overflow-y: scroll;
    text-align: center;
  }

  #lectureTbl thead th,
  #basketTbl thead th {
    position: sticky;
    top: 0;
  }
  #basketTbl th,
  #lectureTbl th {
    background-color: #eee;
  }
